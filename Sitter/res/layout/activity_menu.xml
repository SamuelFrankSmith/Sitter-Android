<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/menu_control"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/menu_item_side_margin"
        android:layout_marginBottom="@dimen/action_bar_margin"
        android:layout_marginRight="10dp"
        android:contentDescription=""
        android:background="@drawable/ic_launcher" />

    <com.sitter.widgets.ActivityMenuItem
        android:id="@+id/menu_call_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:menuImage="@drawable/ic_launcher"
        custom:menuText="@string/add_child" />

    <com.sitter.widgets.ActivityMenuItem
        android:id="@+id/menu_note_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:menuImage="@drawable/ic_launcher"
        custom:menuText="@string/settings"/>

    <com.sitter.widgets.ActivityMenuItem
        android:id="@+id/menu_meeting_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:menuImage="@drawable/ic_launcher"
        custom:menuText="@string/sign_out" />

    <com.sitter.widgets.ActivityMenuItem
   		android:id="@+id/menu_contact_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:visibility="gone"
        custom:menuImage="@drawable/ic_launcher"
        custom:menuText="@string/sign_out" />

    <com.sitter.widgets.ActivityMenuItem  
        android:id="@+id/menu_organization_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"      
        android:visibility="gone"
        custom:menuImage="@drawable/ic_launcher"
        custom:menuText="@string/sign_out" />

	<com.sitter.widgets.ActivityMenuItem
        android:id="@+id/menu_opportunity_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        custom:menuImage="@drawable/ic_launcher"
        custom:menuText="@string/sign_out"/>

</LinearLayout>